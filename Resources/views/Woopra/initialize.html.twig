<!-- Start of Woopra Code -->
<script type="text/javascript">
function woopraReady(tracker) {
    tracker.setDomain('{{ domain }}');
    tracker.setIdleTimeout({{ idleTimeout }});

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        tracker.addVisitorProperty('name', '{{ app.user.fullName }}');
        tracker.addVisitorProperty('email', '{{ app.user.email }}');
        {% if userGravater %}
            tracker.addVisitorProperty('avatar', '{{ userGravatar }}');
        {% endif %}
    {% endif %}

    tracker.track();

    return false;
}
(function() {
    var wsc = document.createElement('script');
    wsc.src = document.location.protocol+'//static.woopra.com/js/woopra.js';
    wsc.type = 'text/javascript';
    wsc.async = true;
    var ssc = document.getElementsByTagName('script')[0];
    ssc.parentNode.insertBefore(wsc, ssc);
})();
</script>
<!-- End of Woopra Code -->